# Backend Configuration
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./professor_inbox.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/professor_inbox

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your_azure_app_client_id_here
MICROSOFT_CLIENT_SECRET=your_azure_app_client_secret_here
MICROSOFT_TENANT_ID=your_azure_tenant_id_here
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/callback

# Claude AI
ANTHROPIC_API_KEY=your_claude_api_key_here

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
FRONTEND_URL=http://localhost:3000

# Email Processing
MAX_EMAILS_PER_SYNC=50
EMAIL_SYNC_INTERVAL_MINUTES=15

# Rate Limiting
CLAUDE_RATE_LIMIT_PER_MINUTE=60
GRAPH_RATE_LIMIT_PER_MINUTE=1000

# Vector Search
EMBEDDINGS_DIMENSION=1536
MAX_SEARCH_RESULTS=10

# Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600